<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Etiqueta Num1 -->
    <TextView
        android:id="@+id/lblNum1"
        android:text="Num 1:"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Campo de texto Num1 -->
    <EditText
        android:id="@+id/txtNum1"
        android:hint="ej. 5"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- Etiqueta Num2 -->
    <TextView
        android:id="@+id/lblNum2"
        android:text="Num 2:"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Campo de texto Num2 -->
    <EditText
        android:id="@+id/txtNum2"
        android:hint="ej. 4.8"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <!-- Etiqueta Respuesta -->
    <TextView
        android:id="@+id/lblRespuesta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/txtNum2"
        android:layout_marginTop="20dp"
        android:text="Respuesta: ?" />

    <RadioGroup
        android:id="@+id/rgoOpciones"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="240dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
        <RadioButton
            android:id="@+id/optsuma"
            android:text="sumar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <RadioButton
        android:id="@+id/optresta"
android:text="restar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"  />
    <RadioButton
        android:id="@+id/optmultiplicacion"
        android:text="multiplicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RadioButton
        android:id="@+id/optdivision"
        android:text="division"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    </RadioGroup>
    <!-- BotÃ³n Calcular -->
    <Button
        android:id="@+id/btnCalcular"
        android:layout_marginTop="220dp"
        android:text="Calcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>
